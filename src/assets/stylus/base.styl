@import "variable.styl"
@import "mixin.styl"

body, html
  line-height: 1.5
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  font-weight 400
  font-size 1rem
  user-select: none
  -webkit-tap-highlight-color: transparent
  background #fff
  color: $color-text
  width 100%
  height 100%


  ._col-0
    background #fff

  ._col-1
    background $color-theme-l

  .custom-select
    .el-input__inner
      border none
      line-height 26px
      height 26px
      color #eee
      background inherit

    .el-select-dropdown__item
      padding-right: 35px;

  .el-input__icon
    line-height 100%

  .el-tooltip__popper.is-dark
    background rgba(50, 50, 50, .7)

  .el-popover[x-placement^=bottom]
    background rgba(50, 50, 50, .7)
    color #fff
    border-color rgba(50, 50, 50, 0.7)

    .popper__arrow, .popper__arrow::after
      border-bottom-color: rgba(50, 50, 50, .7)

  .custom-table
    td
      border-bottom 3px solid $color-background

    tbody tr:hover > td
      background-color: #555 !important
      color #fff !important

    .el-table__empty-block
      display none
    .el-table__header
      .cell
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

  .custom-tabs
    .el-tabs__content
      display none

  .custom-slider
    .el-slider__runway
      margin 16px 0

    .el-slider__button-wrapper
      top -12px
      height: 20px;

      .el-slider__button
        width: 10px;
        height: 20px;
        background: $color-theme
        border none
        border-bottom none
        border-radius 0
        position relative

        &:after
          position absolute
          content ''
          width 0
          height 0
          top 20px
          left 50%
          transform translateX(-50%)
          border-width 5px
          border-style: solid;
          border-color: $color-theme transparent transparent transparent;

.no-radius
  .el-input__inner, .el-button--medium, .el-button
    border-radius 0

.row-0
  background #fff

.row-1
  background $color-theme-l

.is-opened
  .el-menu-item-group__title
    display none
  .el-menu
    background #1B1C38!important
    .el-menu-item
      background transparent!important
      color #5A5A86
.search-box
  .el-input__inner
    border 1px solid #409EFF

.no-wrap
  no-wrap()
