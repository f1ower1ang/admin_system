@import "variable.styl"

body, html
  line-height: 1.5
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  font-weight 400
  font-size 1rem
  user-select: none
  -webkit-tap-highlight-color: transparent
  background #fff
  color: $color-text
  width 100%
  height 100%


  ._col-0
    background #000033

  ._col-1
    background #000066

  ._col-2
    background #663300

  ._col-3
    background #003300

  ._col-4
    background #663366

  ._col-5
    background #003366

  ._col-6
    background #003399

  ._col-7
    background #006600

  ._col-8
    background #330000

  ._col-9
    background #006666

  ._col-10
    background #006699

  ._col-11
    background #333333

  ._col-12
    background #333366

  .el-table tbody tr:hover > td
    background-color: #555 !important
    color #fff

  .el-table__empty-block
    display none

  .el-radio-button__inner
    border none
    padding: 6px 12px;
    font-size: 12px;
    border-radius: 0

  .el-radio-button:first-child .el-radio-button__inner
    border-radius: 0
    border none

  .el-radio-button
    border-radius 0
    border 1px solid #DCDFE6

    &.is-active
      border-color #409EFF
      border-radius 0
      background-color: #409EFF

  .el-select .el-input__inner
    border none
    line-height 26px
    height 26px
    text-align center

  .el-input__inner
    background inherit

  .el-select-dropdown__item
    text-align center
    padding-right: 35px;

  .el-input__icon
    line-height 100%

  .el-popper[x-placement^=bottom]
    margin-top 3px

  .el-popper[x-placement^=bottom] .popper__arrow
    right 50px
    margin 0 auto

  .el-tooltip__popper.is-dark
    background rgba(50, 50, 50, .7)

  .el-popover[x-placement^=bottom]
    background rgba(50, 50, 50, .7)
    color #fff
    border-color rgba(50, 50, 50, 0.7)

    .popper__arrow, .popper__arrow::after
      border-bottom-color: rgba(50, 50, 50, .7)

