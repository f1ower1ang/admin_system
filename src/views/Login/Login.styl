.login
  position fixed
  z-index 100
  top 0
  left 0
  width 100%
  height 100%
  background url("../../assets/images/bkg.jpg") no-repeat
  background-size: cover;
  background-position center

  #container
    width: 550px;
    height: 400px;
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background-color: rgba(250, 255, 255, 1);
    position: absolute;
    box-shadow: 2px 2px 8px #000000

    #head
      font-size: 30px;
      text-align: center;
      color: gray;
      font-weight: bold;
      margin-top: 20px

    .send-button
      text-align: center;
      margin-top: 30px;

      input
        width: 350px;
        height: 40px;
        background-color: rgba(88, 87, 86, 0.8);
        border: none;
        color: aliceblue;
        font-size: 18px;
        transition all .2s
        cursor pointer

        &:hover
          box-shadow: 1px 1px 5px #000000;

      #span {
        text-align: center;
        margin-top: 10px;
        margin-left: 191px;
      }


#userspan, #passwordspan {
  font-size: 13px;
  color: red;
}

#login {
  width: 100%;
  height: 800px;
  /*  background-color: darkgray;*/
  position: relative;
}

#form {
  text-align: center;
  margin-top: 40px;
}

#form input {
  text-align: center;
  width: 350px;
  height: 40px;
  font-size: 16px;
  transition all .2s
  border: 1px solid darkgray;
}

#form input:hover {
  box-shadow: 1px 1px 5px gray;
}

.tick {
  float: left;
  list-style: none;
  display: inline-block;
  width: 100%;
}

.tick li {
  float: left;
}

.tick li:nth-child(1) {
  margin-left: 100px;
}

.tick li:nth-child(2) {
  margin-left: 188px;

}

ul.tick li input[type="checkbox"] {
  display: none;
}

ul.tick li input[type="checkbox"] + label {
  position: relative;
  padding-left: 30px;
  border: chocolate;
  display: inline-block;
  font-size: 14px;
  color: #000000;
}

ul.tick li input[type="checkbox"] + label span:first-child {
  width: 17px;
  height: 17px;
  display: inline-block;
  border: 1px solid darkgray;
  position: absolute;
  top: -2px;
  left: 0;
  bottom: 4px;
}

ul.tick li input[type="checkbox"]:checked + label span:first-child:before {
  content: "";
  background: url(../../assets/images/tik1.png) no-repeat;
  background-size: contain;
  position: absolute;
  border: none;
  left: 3px;
  top: 3px;
  font-size: 10px;
  width: 10px;
  height: 10px;
}

.a {
  color: steelblue;
  font-size: 14px;
  transition: 0.2s all;
}

.a:hover {
  font-size: 15px;
}
