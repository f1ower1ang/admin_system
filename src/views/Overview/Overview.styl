@import "../../assets/stylus/variable.styl"
.overview
  width 100%
  height 100%
  .top
    width 100%
    height 50%
    .el-col
      height 100%
      .border
        position relative
        width 100%;
        height calc(100%- 40px)
      .tooltip
        position absolute
        overflow hidden
        width 20%
        height 20%
        border-radius 10px
        background rgba(111, 111, 111, .7)
        padding 5px
        p
          color #fff
          line-height 20px
          font-size $font-size-small
        img
          height calc(100% - 30px)
  .bottom
    width 100%
    height 50%
    .el-col
      height 100%
      .list
        width 100%
        height calc(100% - 64px)
      .title
        display flex
        border-bottom none
        background #eee
        .el-select
          flex 1
          text-align center
          font-size $font-size-medium
          margin-right 10px
