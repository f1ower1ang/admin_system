.overview
  width 100%
  height 100%
  overflow hidden
  color #fff
  border-right 5px solid $color-border
  .left
    border-right 2px solid $color-border
    flex-direction column
    height 100%
    .el-row
      height 50%
      width 100%
      &:first-child
        border-bottom 2px solid $color-border
      &:last-child
        border-top 2px solid $color-border
        ._title
          border-bottom none
      .el-col
        height calc(100% - 34px)

  .right
    border-left 2px solid $color-border
    height 100%
    .top
      height 55%
      border-bottom: 1px solid rgba(46,46,86,1)
      .el-col
        height calc(100% - 34px)

    .bottom
      height 45%
      border-top 1px solid rgba(46,46,86,1)
      ._title
        font-size $font-size-small
        color $color-theme
        font-weight normal
      .el-select
        border-right 1px solid rgba(46,46,86,1)
        &:last-child
          border-right none
      .el-col
        height calc(100% - 34px)

    .border
      position relative
      width 100%;
      height 100%
      padding 20px 0
      .describe
        text-align right
        padding 0 20px
        font-size $font-size-small
        color $color-theme

    .tooltip
      position absolute
      overflow hidden
      width 20%
      height 20%
      border-radius 10px
      background rgba(111, 111, 111, .7)
      padding 5px
      cursor pointer

      p
        color #fff
        line-height 20px
        font-size $font-size-small

      img
        height calc(100% - 30px)

    .list
      width 100%
      height calc(100% - 64px)

    .title
      display flex
      color #eee
      padding: 0 10px;

      .el-select
        flex 1
        font-size $font-size-medium
        margin-right 10px
        color #eee

  ._title
    font-size $font-size-medium-x
    padding 5px 10px
    border-bottom 1px solid rgba(46,46,86,1)
    font-weight bold
